<div class="jumbotron">
<center>
	<h1>Recipes</h1>
</center>
</div><div class="row">
	<div class="col-md-6 col-md-offset-3">
		<br>
		<% if @recipes.any? %>
			<%= @recipes.each do |recipe| %>
			<%= recipe.name %>
			<%= link_to "View Recipe", recipe_path(recipe) %>
			<%= recipe.description %>
			<% end %>
		<% else %>
			No Recipes yet!
		<% end %>
		<% if current_user %>
			<%= link_to "Add Recipe", new_recipe_path %>
		<% end %>
	</div>
</div>