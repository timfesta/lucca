<!DOCTYPE html>
<html>
<head>
  	<title>Oakland</title>
  	<meta name="viewport" content="width=device-width, initial-scale=1">
  	<%= csrf_meta_tags %>	
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.5/yeti/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.6/flatly/bootstrap.min.css">
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
</head>
<body>
	<nav class="navbar navbar-default navbar-static-top">
		<div class="container-fluid">
	    	<div class="navbar-header">
	    		<ul class="nav navbar-nav pull-left">
	    			<li><%= link_to "Oakland", root_path, class: "btn-primary" %></li>
	    		</ul>
	    	    	
	    		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    		</button>	
	    	</div>
	    	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	    		<ul class="nav navbar-nav pull-right">
	    			<!-- log in / log out -->
					<% if logged_in? %>
						<li><%= link_to "Profile", profile_path %></li>	
						<li ><%= link_to "Logout", logout_path %></li>								
					<% else %> 
						<%= link_to "Login", login_path, class: "btn navbar-btn navbar-right btn-primary" %>
						<%= link_to "Sign Up", signup_path, class: "btn navbar-btn navbar-right btn-primary" %>
					<% end %>
	    		</ul>
	    	</div>
		</div>
	</nav> 
	
	<%= yield %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>

